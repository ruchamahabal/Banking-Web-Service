<!doctype html>
<html lang="en">
  <head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
	<link rel="stylesheet" type="text/css" href="../css/style.css">

	<title>Banking Microservices</title>
  </head>
  <body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	  </button>
	
	  <div class="container collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item active">
				<a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" href="/accounts">Account</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" href="/customers">Customer</a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link" href="/transactions">Money Transfer</a>
			  </li>
			</ul>
	

	
	  </div>
	</nav>

	<div class="container mt-3 mb-3">
		<div class="row justify-content-center">
			<div class="card col-lg-6 col-md-6 shadow-sm bg-white rounded m-5 p-5">
				<div class="col">
					<form action="/create_customer" method="POST">
						<div class="form-group">
							<label for="customer-name">Customer Name</label>
                            <input id="customer-name" name="customer_name" class="form-control" type="text" maxlength="40">
						</div>
						
                        <div class="form-group">
                            <label for="ph-no">Phone Number</label>
                            <input id="ph-no" name="phone_no" class="form-control" type="number" maxlength="10"></div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input id="address" name="address" class="form-control" type="text"></div>

						<button type="submit" id="btn-create-customer" class="btn btn-primary">Create</button>
					</form>
				</div>
			</div>
		</div>

		<div class="modal" id="customer-creation-success" tabindex="-1" role="dialog">
			<div class="modal-dialog modal-sm" role="document">
			  <div class="modal-content">
				<div class="modal-header">
				  <h5 class="modal-title">Success</h5>
				  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				  </button>
				</div>
				<div class="modal-body">
				<% if (typeof customer_id !== 'undefined') {  %> 
				  <p>Customer ID with Customer ID <%= customer_id %>Customer ID has been created successfully!</p>
				<% } %> 
				</div>
				<div class="modal-footer">
				  <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
				</div>
			  </div>
			</div>
		  </div>
	</div>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  
	<!-- datatable lib -->
	<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

	<!-- datatable script -->
	<script>
		$('#customers-list').DataTable({
			buttons: [
				'Add New Customer'
			]
		});
	</script>

		<% if (typeof customer_id !== 'undefined') { %>
			<script>
				$('#customer-creation-success').modal("show");

				$(".modal").on("hidden.bs.modal", function () {
					window.location = "../customers";
				});
			</script>
		<% }  %> 
</body>
</html>